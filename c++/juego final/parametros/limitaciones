void Objeto::actualizar (int anchura, int altura)
{
    this->vx -= ROZAMIENTO * this->vx;
    this->vy -= ROZAMIENTO * this->vy;
    this->x += this->vx;
    this->y += this->vy;
   
    if(this->y < 0)
    this->y=0;
    if(this->y > AlturaDisplay-Tama単oImagenAlto)
    this->y = AlturaDisplay-Tama単oImagenAlto;
    if(this->x < 0)
    this->x=0;
    if(this->x > AnchoDisplaya-Tama単oImagenAncho)
    this->x = AnchoDisplaya-Tama単oImagenAncho;

}
